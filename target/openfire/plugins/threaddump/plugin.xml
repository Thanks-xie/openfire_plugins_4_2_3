    <name>Thread Dump</name>
    <description>A plugin that can be used to generate diagnostics.</description>
    <author>Ignite Realtime</author>
    <version>1.0.0</version>
    <date>08/02/2019</date>

    <adminconsole>
        <tab id="tab-server">
            <sidebar id="sidebar-server-manager">
                <item id="threaddump" name="${admin.sidebar.threaddump.name}" description="${admin.sidebar.threaddump.description}" url="threaddump.jsp"/>
            </sidebar>
        </tab>
    </adminconsole>

</plugin>
